<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ExamAppBarLayout">
        <attr name="leftImageColor" format="color" />
        <!--        <attr name="leftImageSize" format="dimension"/>-->
        <attr name="titleColor" format="color" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleText" format="string" />
        <attr name="toorbarColor" format="color" />

        <!--        <attr name="rightBtnSize" format="dimension"/>-->
        <!--        <attr name="rightBtnColor" format="dimension"/>-->
        <!--        <attr name="rightBtnTextSize" format="dimension"/>-->
        <!--        <attr name="rightBtnTextColor" format="dimension"/>-->

    </declare-styleable>

    <declare-styleable name="CoordinatorTabLayout">
        <attr name="contentScrim" format="color" />
        <attr name="tabIndicatorColor" format="color" />
        <attr name="tabTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SignaturePad">
        <attr name="penMinWidth" format="dimension" />
        <attr name="penMaxWidth" format="dimension" />
        <attr name="penColor" format="color" />
        <attr name="velocityFilterWeight" format="float" />
        <attr name="clearOnDoubleClick" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TabView">
        <attr name="tabColor" format="color|integer" />
        <attr name="tabImage" format="reference" />
        <attr name="tabSelectedImage" format="reference" />
        <attr name="tabTitle" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="HwLoadingView">
        <!--控件大小-->
        <attr name="hlv_size" format="dimension" />
        <!--控件颜色-->
        <attr name="hlv_color" format="color" />
        <!--转一圈花费时长-->
        <attr name="hlv_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CBRatingBar">
        <attr name="starSize" format="dimension|reference"/>
        <attr name="starCount" format="integer"/>
        <attr name="starSpace" format="dimension|reference"/>
        <attr name="starMaxProgress" format="float"/>
        <attr name="starProgress" format="float"/>
        <attr name="starStrokeWidth" format="dimension|reference"/>
        <attr name="starShowStroke" format="boolean"/>
        <attr name="starStrokeColor" format="color|reference"/>
        <attr name="starFillColor" format="color|reference"/>
        <attr name="starCoverColor" format="color|reference"/>
        <attr name="starCanTouch" format="boolean"/>
        <attr name="starUseGradient" format="boolean"/>
        <attr name="starStartColor" format="color|reference"/>
        <attr name="starEndColor" format="color|reference"/>
        <attr name="starPathData" format="string|reference"/>
        <attr name="starPathDataId" format="reference"/>
        <attr name="starCoverDir">
            <enum name="left_to_right" value="0" />
            <enum name="right_to_left" value="1" />
            <enum name="top_to_bottom" value="2" />
            <enum name="bottom_to_top" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ThreeImageView">
        <attr name="singleImgSize" format="dimension"/>
        <attr name="imgGap" format="dimension"/>
        <attr name="maxSize" format="integer"/>
    </declare-styleable>


    <declare-styleable name="VerticalTabLayout">

        <attr name="indicator_color" format="color" />
        <attr name="indicator_width" format="dimension" />
        <attr name="indicator_corners" format="dimension" />
        <attr name="indicator_gravity" format="enum">
            <enum name="left" value="3" />
            <enum name="right" value="5" />
            <enum name="fill" value="119" />
        </attr>
        <attr name="tab_margin" format="dimension" />
        <attr name="tab_mode" format="enum">
            <enum name="fixed" value="10" />
            <enum name="scrollable" value="11" />
        </attr>
        <attr name="tab_height" format="dimension"/>

    </declare-styleable>

</resources>