<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.utiltool2.examination.ExamAppBarLayout
        android:id="@+id/exam_system_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftImageColor="@color/colorPrimary"
        app:titleColor="@color/black"
        app:toorbarColor="@color/white" />

    <com.example.utiltool2.exam.ExamViewPager
        android:id="@+id/exam_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>


