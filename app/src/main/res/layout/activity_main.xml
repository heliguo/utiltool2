<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_glide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义Glide"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_screen_draw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义view"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recyclerview"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CardView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_slideview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义view滑动与点击"
        android:textAllCaps="false" />


</LinearLayout>